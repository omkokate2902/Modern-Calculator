<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            android:id="@+id/calctv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:textColor="@color/text"
            android:layout_marginTop="30dp"
            android:text=""
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/restv"
            android:layout_width="wrap_content"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:textColor="@color/text"
            android:text=""
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="80sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_ac"
                android:textSize="@dimen/btnTextSize"
                android:onClick="clearOnClick"
                android:text="AC"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_top"
                android:textSize="@dimen/btnTextSize"
                android:onClick="bracketsOnClick"
                android:text="( )"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_top"
                android:textSize="@dimen/btnTextSize"
                android:onClick="powerOfOnClick"
                android:text="^"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btnTextSize"
                android:background="@drawable/btn_operations"
                android:onClick="divisionOnClick"
                android:text="/"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_nums"
                android:textSize="@dimen/btnTextSize"
                android:onClick="sevenOnClick"
                android:text="7"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_nums"
                android:textSize="@dimen/btnTextSize"
                android:onClick="eightOnClick"
                android:text="8"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_nums"
                android:textSize="@dimen/btnTextSize"
                android:onClick="nineOnClick"
                android:text="9"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btnTextSize"
                android:background="@drawable/btn_operations"
                android:onClick="timesOnClick"
                android:text="X"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_nums"
                android:textSize="@dimen/btnTextSize"
                android:onClick="fourOnClick"
                android:text="4"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_nums"
                android:textSize="@dimen/btnTextSize"
                android:onClick="fiveOnClick"
                android:text="5"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_nums"
                android:textSize="@dimen/btnTextSize"
                android:onClick="sixOnClick"
                android:text="6"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_operations"
                android:textSize="@dimen/btnTextSize"
                android:onClick="minusOnClick"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_nums"
                android:textSize="@dimen/btnTextSize"
                android:onClick="oneOnClick"
                android:text="1"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_nums"
                android:textSize="@dimen/btnTextSize"
                android:text="2"
                android:onClick="twoOnClick"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_nums"
                android:textSize="@dimen/btnTextSize"
                android:text="3"
                android:onClick="threeOnClick"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_operations"
                android:textSize="@dimen/btnTextSize"
                android:text="+"
                android:onClick="plusOnClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_nums"
                android:textSize="@dimen/btnTextSize"
                android:text="."
                android:onClick="decimalOnClick"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_nums"
                android:textSize="@dimen/btnTextSize"
                android:text="0"
                android:onClick="zeroOnClick"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="40sp"
                android:background="@drawable/btn_operations"
                android:text="="
                android:onClick="equalsOnClick"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>